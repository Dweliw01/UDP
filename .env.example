# Ultra Deep Research - Environment Configuration Template
# Copy this file to .env and fill in your actual API keys
# Never commit your .env file to version control!

# ============================================================================
# REQUIRED: API Keys
# ============================================================================

# Anthropic API Key
# Get yours at: https://console.anthropic.com
ANTHROPIC_API_KEY=your_anthropic_key_here

# Perplexity API Key  
# Get yours at: https://www.perplexity.ai
PERPLEXITY_API_KEY=your_perplexity_key_here

# ============================================================================
# OPTIONAL: Model Configuration
# ============================================================================

# Model to use for query generation (cheaper, faster)
QUERY_MODEL=claude-haiku-4-5

# Model to use for final synthesis (more powerful)
SYNTHESIS_MODEL=claude-sonnet-4-5

# ============================================================================
# OPTIONAL: Performance Configuration
# ============================================================================

# Maximum number of concurrent API requests (adjust based on rate limits)
MAX_CONCURRENT_SEARCHES=15

# Timeout for each search request in seconds
SEARCH_TIMEOUT=30

# Number of retry attempts for failed requests
RETRY_ATTEMPTS=3

# Delay between retries in seconds
RETRY_DELAY=1.0

# ============================================================================
# OPTIONAL: Default Settings
# ============================================================================

# Default number of queries to generate
DEFAULT_NUM_QUERIES=100

# Default output filename
DEFAULT_OUTPUT_FILE=research_report.md

# ============================================================================
# OPTIONAL: Logging Configuration
# ============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path (leave empty to disable file logging)
# LOG_FILE=logs/research.log
